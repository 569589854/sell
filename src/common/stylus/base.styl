.clearfix
  display inline-block
  &:after
    display block
    content ''
    height 0
    clear both
    visibility hidden

body,html
  line-height 1
  font-weight 200
  font-family 'PingFang SC','STHeitiSC-Light','Helvetica-Light',arial,sans-serif
  font-size: 20px

@media (-webkit-min-device-pixel-ratio: 1.5),(-ms-min-device-pixel-ratio: 1.5), (-o-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
  .border-1px
    &::after
      -webkit-transform: scaleY(0.7)
      -ms-transform: scaleY(0.7)
      -o-transform: scaleY(0.7)
      transform: scaleY(0.7)
    &::before
      -webkit-transform: scaleY(0.7)
      -ms-transform: scaleY(0.7)
      -o-transform: scaleY(0.7)
      transform: scaleY(0.7)
      
//红米note1S iPhone6
@media (-webkit-min-device-pixel-ratio: 2),(-ms-min-device-pixel-ratio: 2), (-o-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
  .border-1px
    &::after
      -webkit-transform: scaleY(0.5)
      -ms-transform: scaleY(0.5)
      -o-transform: scaleY(0.5)
      transform: scaleY(0.5)
    &::before
      -webkit-transform: scaleY(0.5)
      -ms-transform: scaleY(0.5)
      -o-transform: scaleY(0.5)
      transform: scaleY(0.5)